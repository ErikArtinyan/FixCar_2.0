<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5894D3"
    tools:context=".ui.Mayraqaxaq.Vrastan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_centerInParent="true"

        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="192dp"
            android:layout_height="186dp"
            android:layout_below="@+id/countryesName"
            android:layout_centerHorizontal="true"

            app:srcCompat="@drawable/castlee" />

        <TextView
            android:id="@+id/countryesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Грузия"
            android:textSize="35dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/imageView2"
            android:layout_marginTop="200dp"
            android:gravity="center_horizontal"> <!-- Центрируем содержимое горизонтально -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp"> <!-- Отступ между линейными макетами -->

                <Button
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/blue"
                    android:onClick="sxal"
                    android:text="Батуми"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"/> <!-- Процентное значение высоты кнопки -->

                <Button
                    android:id="@+id/bishkek"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:backgroundTint="@color/blue"
                    android:onClick="sxal"
                    android:text="Бишкек"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp"> <!-- Отступ между линейными макетами -->

                <Button
                    android:id="@+id/Vanadzor"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:backgroundTint="@color/blue"
                    android:onClick="sxal"
                    android:text="Ванадзор"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"/> <!-- Процентное значение высоты кнопки -->

                <Button
                    android:id="@+id/Tbilisi"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:backgroundTint="@color/blue"
                    android:onClick="next"
                    android:text="Тбилиси"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>