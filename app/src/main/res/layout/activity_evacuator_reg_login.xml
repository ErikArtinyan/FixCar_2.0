<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvacuatorRegLoginActivity"
    android:background="@color/basic_color">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        app:tint="@color/white"
        android:layout_centerHorizontal="true">

    </ImageView>

    <EditText
        android:id="@+id/evacuatorEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/evacuatorStatus"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="abc@gmail.com"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/evacuatorPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/evacuatorEmail"
        android:textStyle="bold"
        android:hint="password"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/evacuatorConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/evacuatorPassword"
        android:textStyle="bold"
        android:hint="confirm password"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signInEvacuator"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="Войти"
        android:layout_below="@id/evacuatorConfirmPassword"
        />


    <Button
        android:id="@+id/signUpEvacuator"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="Регистрация"
        android:layout_below="@id/signInEvacuator"
        />

    <TextView
        android:id="@+id/evacuatorStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:text="Вход для эвакуаторщиков" />

    <TextView
        android:id="@+id/accauntCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signInEvacuator"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:text="Нет аккаунта?" />

</RelativeLayout>
